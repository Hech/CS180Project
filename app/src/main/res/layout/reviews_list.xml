<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/playlist_mod_selector"
    android:padding="5dp"
    android:weightSum="1">

    <GridView
        android:id="@+id/grid_products"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:background="@android:color/transparent"

        android:columnWidth="90dp"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarS"
        android:layout_alignTop="@+id/grid_products"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:isIndicator="true" />

    <TextView
        android:id="@+id/review"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textColor="@color/WarmBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/ratingBarS"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/SteelBlue"
        android:textSize="18sp"
        android:layout_below="@id/review"
        android:layout_alignParentRight="true" />


</RelativeLayout>
