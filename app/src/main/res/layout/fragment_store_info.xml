<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.hech.musicplayer.StoreInfo"
    >


    <Button
       android:id="@+id/revbutton"
       android:text="Review"
       style="?android:attr/buttonStyleSmall"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_toStartOf="@+id/dlButton"
        android:layout_alignBottom="@+id/TempPic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:id="@+id/TempPic"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"></LinearLayout>

    <ImageButton
        android:id="@+id/dlButton"
        android:src="@drawable/dl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_below="@+id/revbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Song_Name"
        android:text="Title"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_below="@+id/TempPic"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Artist"
        android:id="@+id/artist"
        android:layout_toEndOf="@+id/Song_Name"
        android:layout_toStartOf="@+id/revbutton"
        android:textSize="14sp"
        android:layout_below="@+id/Song_Name"
        android:layout_alignLeft="@+id/Song_Name"
        android:layout_alignStart="@+id/Song_Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/songalb"
        android:layout_below="@+id/artist"
        android:layout_alignLeft="@+id/artist"
        android:layout_alignStart="@+id/artist"
        android:textSize="14sp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Sample"
        android:id="@+id/samplebutton"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/dlButton"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
